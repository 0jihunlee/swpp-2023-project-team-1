<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/post_padding">

    <LinearLayout
        android:id="@+id/placeholder_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/shimmer_profile_image_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <View
                android:layout_width="@dimen/post_profile_image_width"
                android:layout_height="@dimen/post_profile_image_height"
                android:background="@color/grey_300"
                android:scaleType="centerInside" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shimmer_username"
            style="@style/post_username_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/grey_300" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/shimmer_content"
        style="@style/small_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@color/grey_300"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmer_image_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_placeholder_height"
        app:cardCornerRadius="10dp" >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_300"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>