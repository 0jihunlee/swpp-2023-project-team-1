<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SmallTextBtn">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="TextBtn" parent="NormalText">
        <item name="android:textColor">@color/blue_500</item>
    </style>


    <style name="create_post_fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:foreground">@drawable/ic_nav_create_post</item>
    </style>
    
    <style name="FilledEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/boxBackgroundColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">6sp</item>
        <item name="boxCornerRadiusBottomStart">6sp</item>
        <item name="boxCornerRadiusTopEnd">6sp</item>
        <item name="boxCornerRadiusTopStart">6sp</item>

    </style>


</resources>