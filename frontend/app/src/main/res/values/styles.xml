<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="normal_text">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="post_username_text">
        <item name="android:textColor">?android:colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="small_text">
        <item name="android:textColor">?android:colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="small_text_btn" parent="small_text">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="post_footer_text" parent="small_text">
        <item name="android:textColor">@color/grey_600</item>
    </style>

    <style name="created_at_text" parent="small_text">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="text_btn" parent="normal_text">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImgEditBtn">
        <item name="android:background">@drawable/btn_edit_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>

        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="PromptSuggestBtn">
        <item name="android:background">@drawable/btn_prompt_suggestion_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>


    <style name="create_post_fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:foreground">@drawable/ic_nav_create_post</item>
    </style>

    <style name="filled_edit_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/boxBackgroundColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">6sp</item>
        <item name="boxCornerRadiusBottomStart">6sp</item>
        <item name="boxCornerRadiusTopEnd">6sp</item>
        <item name="boxCornerRadiusTopStart">6sp</item>

    </style>

    <style name="ImgEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/boxBackgroundColor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">6sp</item>
        <item name="boxCornerRadiusBottomStart">6sp</item>
        <item name="boxCornerRadiusTopEnd">6sp</item>
        <item name="boxCornerRadiusTopStart">6sp</item>
    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- Profile Page -->
    <style name="profile_username_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="profile_bio_text">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="profile_button_blue">
        <item name="android:background">@drawable/bg_profile_btn_blue</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="profile_button_grey">
        <item name="android:background">@drawable/bg_profile_btn_grey</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>