<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SmallTextBtn">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="TextBtn" parent="NormalText">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="ImgEditBtn">
        <item name="android:background">@drawable/btn_edit_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>

        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
    
    <style name="PromptSuggestBtn">
        <item name="android:background">@drawable/btn_prompt_suggestion_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>


    <style name="create_post_fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:foreground">@drawable/ic_nav_create_post</item>
    </style>
    
    <style name="FilledEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/boxBackgroundColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">6sp</item>
        <item name="boxCornerRadiusBottomStart">6sp</item>
        <item name="boxCornerRadiusTopEnd">6sp</item>
        <item name="boxCornerRadiusTopStart">6sp</item>
    </style>

    <style name="ImgEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/boxBackgroundColor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">6sp</item>
        <item name="boxCornerRadiusBottomStart">6sp</item>
        <item name="boxCornerRadiusTopEnd">6sp</item>
        <item name="boxCornerRadiusTopStart">6sp</item>
    </style>


</resources>